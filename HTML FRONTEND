<body>

<div class="container">
    <h1>⚡ Electric Motor Temperature Prediction</h1>

    <input type="number" id="ambient" placeholder="Ambient Temperature" required>
    <input type="number" id="coolant" placeholder="Coolant Temperature" required>
    <input type="number" id="u_d" placeholder="Voltage d-axis" required>
    <input type="number" id="u_q" placeholder="Voltage q-axis" required>
    <input type="number" id="motor_speed" placeholder="Motor Speed" required>
    <input type="number" id="torque" placeholder="Torque" required>

    <button onclick="predict()">Predict Temperature</button>

    <div class="loader" id="loader">Predicting...</div>
    <div class="result" id="result"></div>
</div>

<script>
async function predict() {

    document.getElementById("loader").style.display = "block";
    document.getElementById("result").innerHTML = "";

    const data = {
        ambient: parseFloat(document.getElementById("ambient").value),
        coolant: parseFloat(document.getElementById("coolant").value),
        u_d: parseFloat(document.getElementById("u_d").value),
        u_q: parseFloat(document.getElementById("u_q").value),
        motor_speed: parseFloat(document.getElementById("motor_speed").value),
        torque: parseFloat(document.getElementById("torque").value)
    };

    const response = await fetch("/predict", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify(data)
    });

    const result = await response.json();

    document.getElementById("loader").style.display = "none";

    document.getElementById("result").innerHTML =
        "Predicted Temperature: " + result.prediction + " °C";
}
</script>

</body>
